{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <style>
        .help-text {
            display: block;
            margin-top: 0.25rem;
            color: #868e96;
            font-size: 80%;
            font-weight: 400;
        }
    </style>
{% endblock %}

{% block body %}
    <h1 class="py-4">{% block title %}Sign up{% endblock %}</h1>

    {{ form_start(form, {attr: {class: 'mt-4 mb-4'} }) }}
    {{ form_errors(form) }}

    <div class="form-group">
        {{ form_label(form.username) }}
        {{ form_widget(form.username, {attr: {
            class: 'form-control',
            placeholder: 'example123'
        } }) }}
        {{ form_help(form.username, {attr: {
            class: 'form-text text-muted'
        } }) }}
        {{ form_errors(form.username) }}
    </div>
    <div class="form-group">
        {{ form_label(form.fullname) }}
        {{ form_widget(form.fullname, {attr: {
            class: 'form-control',
            placeholder: 'Example Name'
        } }) }}
        {{ form_help(form.fullname, {attr: {
            class: 'form-text text-muted'
        } }) }}
        {{ form_errors(form.fullname) }}
    </div>
    <div class="form-group">
        {{ form_label(form.email) }}
        {{ form_widget(form.email, {attr: {
            class: 'form-control',
            placeholder: 'example@example.com'
        } }) }}
        {{ form_help(form.email, {attr: {
            class: 'form-text text-muted'
        } }) }}
        {{ form_errors(form.email) }}
    </div>
    <div class="form-group">
        {{ form_label(form.password.first) }}
        {{ form_widget(form.password.first, {attr: {
            class: 'form-control',
            placeholder: '*******'
        } }) }}
        {{ form_help(form.password.first, {attr: {
            class: 'form-text text-muted'
        } }) }}
        {{ form_errors(form.password.first) }}
    </div>
    <div class="form-group">
        {{ form_label(form.password.second) }}
        {{ form_widget(form.password.second, {attr: {
            class: 'form-control',
            placeholder: '*******'
        } }) }}
        {{ form_help(form.password.second, {attr: {
            class: 'form-text text-muted'
        } }) }}
        {{ form_errors(form.password.second) }}
    </div>
    {{ form_widget(form.submit, {attr: {
        class: 'btn btn-primary btn-sm'
    } }) }}

    <input type="hidden" name="_csrf_token"
           value="{{ csrf_token('authenticate') }}">
    {{ form_end(form) }}

{% endblock %}
