{% extends 'base.html.twig' %}

{% block body %}
    <h1 class="py-4">{% block title %}Category list - edit{% endblock %}</h1>
    <table class="table table-hover mt-4 mb-4">
        <thead class="bg-light">
        <tr>
            <th>Name</th>
            <th>Description</th>
            <th>Actions</th>
        </tr>
        </thead>
        <tbody>
        {% for category in categories %}
        <tr>
            <td><a href="{{ path('app_homepage', {'category': category.id}) }}">{{ category.label }}</a></td>
            <td>{{ category.description }}</td>
            <td>
                <a href="{{ path('app_category_edit', {'id': category.id}) }}" class="btn btn-primary btn-sm"><i class="fas fa-pencil-alt"></i>
                    Edit</a>
                <a href="{{ path('app_category_delete', {'id': category.id}) }}" class="btn btn-danger btn-sm"><i class="fas fa-trash-alt"></i>
                    Delete</a>
            </td>
        </tr>
        {% endfor %}
        </tbody>
        <tfoot class="bg-light">
        <tr>
            <td colspan="3">
                <a href="{{ path('app_category_add') }}" class="btn btn-primary btn-sm">New category</a>
            </td>
        </tr>
        </tfoot>
    </table>
{% endblock %}
