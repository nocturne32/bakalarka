{block content}

<h1 n:block="title" class="py-4">Sign in</h1>
{form signInForm, class=>'mt-4 mb-4'}
    <div class="form-group">
        {label username}
        {input username, class=>'form-control', placeholder=>'example123'}
    </div>
    <div class="form-group">
        {label password}
        {input password, class=>'form-control', placeholder=>'********'}
    </div>
    {input submit, class=>'btn btn-primary btn-sm'}
{/form}