{block content}

<h1 n:block="title" class="py-4">Create category</h1>
{form addForm class=>'mt-4 mb-4'}
    <div class="form-group">
        {label label}
        {input label, class=>'form-control', placeholder=>'Some label'}
    </div>
    <div class="form-group">
        {label description}
        {input description, class=>'form-control', placeholder=>'Some description', rows=>'3'}
    </div>
    {input submit, class=>'btn btn-primary btn-sm'}
{/form}